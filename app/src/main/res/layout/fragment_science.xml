<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Science">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/pressure"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:text="Pressure"
                android:textSize="8sp"
                app:backgroundTint="#835A5A"
                app:cornerRadius="0dp"
                app:icon="@drawable/ic_baseline_compress_24"
                app:iconGravity="textTop"
                app:iconSize="20dp" />

            <Button
                android:id="@+id/force"
                android:layout_width="103dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:text="Force"
                android:textSize="8sp"
                app:backgroundTint="#835A5A"
                app:cornerRadius="0dp"
                app:icon="@drawable/ic_baseline_arrow_forward_24"
                app:iconGravity="textTop"
                app:iconSize="20dp" />

            <Button
                android:id="@+id/work"
                android:layout_width="109dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:text="Work"
                android:textSize="8sp"
                app:backgroundTint="#835A5A"
                app:cornerRadius="0dp"
                app:icon="@drawable/ic_baseline_snowshoeing_24"
                app:iconGravity="textTop"
                app:iconSize="20dp" />

            <Button
                android:id="@+id/power"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:text="Power"
                android:textColorLink="#FFFFFF"
                android:textSize="8sp"
                app:backgroundTint="#835A5A"
                app:cornerRadius="0dp"
                app:icon="@drawable/ic_baseline_battery_charging_full_24"
                app:iconGravity="textTop"
                app:iconSize="20dp" />
        </LinearLayout>

        <fragment
            android:id="@+id/ScienceFragment"
            android:name="com.example.unitsconverter.Pressure"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#18854E" />

    </LinearLayout>


</FrameLayout>